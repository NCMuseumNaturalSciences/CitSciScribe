                </div>
            </div>
        </div>
        <div class="form-group button-group">
            <div class="col-sm-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary" value="Home">
                    <i class="fa fa-home"></i>
                </a>
                <a href="#" class="btn btn-primary help">
                    Example
                </a>
                <a href="@Url.Action("Projects", "Transcription")" class="btn btn-primary">
                    Projects
                </a>
            </div>
            <div class="col-sm-offset-7 col-sm-2">
                <input type="submit" class="btn btn-primary btnSubmit" value="Submit" style="float: right;" tabindex="24">
                <a href="@Url.Action("SkipTranscription", "Transcription", new {cardId = Model.Id, collectionProject = Model.CollectionProject})" class="btn btn-primary btnSubmit" style="float: right; margin-right: 4px;">Skip</a>
            </div>
        </div>
    </div>
}
</form>
</div>
</div>
<!-- Transcription Notification Dialogs on Submit -->

<div id="transcription-notification" style="display: none;">
    <div id="dialog-wrapper" class="row">
        @if (ViewBag.TranscriptionCount < 1000 &&
             ViewBag.TranscriptionCount != 1 &&
             ViewBag.TranscriptionCount != 15 &&
             ViewBag.TranscriptionCount != 25 &&
             ViewBag.TranscriptionCount != 50 &&
             ViewBag.TranscriptionCount != 100 &&
             ViewBag.TranscriptionCount != 200 &&
             ViewBag.TranscriptionCount != 500 &&
             ViewBag.TranscriptionCount != 1000)
        {
            <div class="dialog-content">
                <p>Number of Completed Transcriptions</p>
                <h1>@Html.Raw(ViewBag.TranscriptionCount) </h1>
                <a id="btnDialogClose" class="btn btn-primary btnClose" href="#">Close</a>
