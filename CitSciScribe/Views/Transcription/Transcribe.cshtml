@model CitSciScribe.Models.Card
@{
    Layout = "~/Views/Shared/_CardLayout.cshtml";
    var formAction = "";
    if (Model.CollectionProject == CitSciScribe.Models.CollectionProject.IchthyologyCharleston)
    {
        formAction = "TranscribeIchthyology?collectionProject=" + Model.CollectionProject;
    }
}

<div id="card-wrapper" class="@Model.CollectionProject container-fluid transcribe-form-wrapper">
<div class="row img-row">
    <div class="col-sm-12 card-col">
        <img src="@Model.CardImagePath" class="card-img" alt="Card"/>
    </div>
</div>
<div class="row form-row">
<form id="transcription-form" class="transcribe-form-h form-horizontal" action="@formAction" method="post" role="form">
<input type="hidden" value="@Model.Id" name="cardId"/>
@if (Model.CardType == CitSciScribe.Models.CardType.Ichthyology1)
{
    <!-- Charleston Fishes -->
