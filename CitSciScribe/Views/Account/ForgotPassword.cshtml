d@model CitSciScribe.Models.ForgotPasswordViewModel
<div id="inner-wrapper" class="col-sm-offset-2">
    <div class="row">
        <div class="col-xs-12 col-logo">
            <img src="" id="logo" alt="CitSciScribe" class="citsci-logo img-responsive"/>
        </div>
    </div>
    <div class="row main-content">
        <h2 class="page-title">Reset Your Password</h2>
        <p>
            Enter the email address for your account and we'll email you instructions on how to reset your password.
        </p>
        <div class="col-sm-8 col-sm-offset-2 form-box">
            <div class="form-bottom">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new {@class = "text-danger"})
                    <div class="form-group">
                        <label for="form-password" class="sr-only">Email</label>
                        <input type="text" id="form-password" class="form-password form-control input-lg" placeholder="Your Email Address" name="Email">
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Email Link</button>
                }
            </div>
        </div>
    </div>
</div>