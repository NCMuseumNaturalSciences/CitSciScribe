@model LoginViewModel
<div id="inner-wrapper" class="col-sm-offset-2">
    <div class="row">
        <div class="col-xs-12 col-logo">
            <img src="~/Content/images/citsci-logo.png" alt="CitSciScribe" class="citsci-logo img-responsive" />
        </div>
    </div>
    <div class="row main-content">
        <h2 class="page-title">Login</h2>
        <div class="col-sm-8 col-sm-offset-2 form-box">
            <div class="form-bottom">
                @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new {@class = "text-danger"})
                    <div class="form-group">
                        <label for="form-username" class="sr-only">Email</label>
                        <input type="text" id="form-username" class="form-username form-control input-lg" placeholder="Username" name="Email">
                    </div>
                    <div class="form-group">
                        <label for="form-password" class="sr-only">Password</label>
                        <input type="password" id="form-password" class="form-password form-control input-lg" placeholder="Password" name="Password">
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">SIGN IN!</button>
                }
            </div>
            <h4 class="form-foot">New to CitSciScribe? Start by <a href="@Url.Action("Register", "Account")">Registering</a>. Forgot Password? @Html.ActionLink("Let us help.", "ForgotPassword", "Account")</h4>
        </div>
    </div>
</div>